			<ul class="w-list-unstyled">
				<li class="li-menu nav_accueil" data-ix="show-dropdown">
					<a class="w-inline-block link-menu {{ app.request.get('_route') in ['accueil'] ? 'active' : '' }}" href="{{ path('accueil') }}">
