						<li class="li-drop">
							<a class="w-inline-block dd-link {{ app.request.get('_route') in ['sondages'] ? 'w--current' : '' }}" href="{{ path('sondages') }}" data-ix="move-txt-dropdown">
								<div class="dd-txt">Sondages
									{% if scandicraft_service.countTotalSurvey() > 0 %}
										({{ scandicraft_service.countTotalSurvey() }})
									{% endif %}
								</div>
							</a>
						</li>
						{% if maintenance_service.count_maintenances() > 0 %}
							<li class="li-drop">
								<a class="w-inline-block dd-link {{ app.request.get('_route') in ['maintenances'] ? 'w--current' : '' }}" href="{{ path('maintenances') }}" data-ix="move-txt-dropdown">
									<div class="dd-txt">Maintenances ({{ maintenance_service.count_maintenances() }})</div>
								</a>
							</li>
						{% endif %}
					</ul>
				</li>
			</ul>
