{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}
{% block description %}Inscrivez-vous sur ScandiCraft pour pouvoir jouer au PvP / Faction sur Minecraft{% endblock %}

{% block body %}

	<section class="w-section section">
		<div class="w-container">
			<div class="w-row">

				<h2>S'inscrire</h2>
				<div class="divider"></div>

				{% include 'form/form_errors.html.twig' with {
					'form': registrationForm
				} %}

				{{ form_start(registrationForm) }}
				<div class="row">
					<div class="form-group col-12 col-md-6">
						{{ form_label(registrationForm.username) }}
						{{ form_widget(registrationForm.username, { 'attr': {'class': 'w-input'} }) }}
					</div>
					<div class="form-group col-12 col-md-6">
						{{ form_label(registrationForm.email) }}
						{{ form_widget(registrationForm.email, { 'attr': {'class': 'w-input'} }) }}
					</div>
				</div>
				<div class="row">
					<div class="form-group col-12 col-md-6">
						{{ form_label(registrationForm.plainPassword.first) }}
						{{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'w-input'} }) }}
					</div>
					<div class="form-group col-12 col-md-6">
						{{ form_label(registrationForm.plainPassword.second) }}
						{{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'w-input'} }) }}
					</div>
				</div>
				{{ form_rest(registrationForm) }}
				<div class="row">
					<button type="submit" class="button" name="Submit">
						{{ 'submit.register'|trans }}
					</button>
				</div>
				{{ form_end(registrationForm) }}

			</div>
		</div>
	</section>

{% endblock %}
