{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

	{% set links %}
	<a href="{{ path('accueil') }}">Accueil</a>/<a href="{{ path('app_register') }}">S'inscrire</a>
	{% endset %}

	{% include 'blocks/sub-banner.html.twig' with {
		'sub_title': 'RÃ©initialiser votre mot de passe',
		'links': links,
	} %}

	<section class="w-section section">
		<div class="w-container">
			<div class="w-row">

				<h2>Nouveau mot de passe</h2>
				<div class="divider"></div>

				{% include 'form/form_errors.html.twig' with {
					'form': form
				} %}

				{{ form_start(form) }}
				<div class="row">
					<div class="form-group col-12 col-md-6">
						{{ form_label(form.username) }}
						{{ form_widget(form.username, { 'attr': {'class': 'w-input'} }) }}
					</div>
					<div class="form-group col-12 col-md-6">
						{{ form_label(form.email) }}
						{{ form_widget(form.email, { 'attr': {'class': 'w-input'} }) }}
					</div>
				</div>
				<div class="row">
					<div class="form-group col-12 col-md-6">
						{{ form_label(form.plainPassword.first) }}
						{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'w-input'} }) }}
					</div>
					<div class="form-group col-12 col-md-6">
						{{ form_label(form.plainPassword.second) }}
						{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'w-input'} }) }}
					</div>
				</div>
				<div class="row">
					<button type="submit" class="button" name="Submit">
						Valider
					</button>
				</div>
				{{ form_end(form) }}

			</div>
		</div>
	</section>

{% endblock %}
